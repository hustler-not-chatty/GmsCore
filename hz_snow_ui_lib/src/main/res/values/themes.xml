<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Everything's base -->
    <style name="SnowUI.BasePre21" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>
    <style name="SnowUI.Base" parent="SnowUI.BasePre21" />
    <style name="SnowUI.Base.NoActionBar" parent="SnowUI.Base">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--
    Use with CollapsingToolbarBaseActivity.
    -->
    <style name="SnowUI.CollapsingToolbar" parent="@style/SnowUI.Base.NoActionBar">
        <item name="elevationOverlayEnabled">true</item>
        <item name="collapsingToolbarLayoutLargeSize">@dimen/settingslib_toolbar_layout_height</item>
    </style>

    <style name="SnowUI.SettingsBase" parent="SnowUI.Base">
        <item name="android:textAppearanceListItem">
            @style/TextAppearance.PreferenceTitle.SettingsLib
        </item>
        <item name="android:listPreferredItemPaddingStart">24dp</item>
        <item name="android:listPreferredItemPaddingLeft">24dp</item>
        <item name="android:listPreferredItemPaddingEnd">16dp</item>
        <item name="android:listPreferredItemPaddingRight">16dp</item>

        <item name="preferenceTheme">@style/PreferenceTheme.SettingsLib</item>

        <item name="alertDialogTheme">@style/SnowUI.SettingsBase.AlertDialogTheme</item>
        <item name="switchStyle">@style/SnowUI.SettingsBase.SwitchStyle</item>
    </style>
    <style name="SnowUI.SettingsBase.NoActionBar" parent="SnowUI.SettingsBase">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <public name="SnowUI.Base" type="style" />
    <public name="SnowUI.Base.NoActionBar" type="style" />
    <public name="SnowUI.CollapsingToolbar" type="style" />
    <public name="SnowUI.SettingsBase" type="style" />
    <public name="SnowUI.SettingsBase.NoActionBar" type="style"/>
</resources>